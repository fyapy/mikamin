{
  "compilerOptions": {
    "target": "es2017",
    "module": "ESNext",
    "moduleResolution": "nodenext",
    "rootDir": "src",
    "lib": ["es2019"],
    "esModuleInterop": true,
    "sourceMap": false,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noImplicitOverride": true,
    "removeComments": true
  },
  "exclude": [
    "node_modules",
    "build",
    "benchmarks",
    "**/*.test.ts",
    "**/*.mock.ts",
  ]
}
