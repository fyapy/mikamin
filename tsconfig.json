{
  "compilerOptions": {
    "strict": true,
    "types": ["vitest"],
    "lib": ["ESNext", "DOM"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowImportingTsExtensions": true,
    "skipLibCheck": true,
    "noEmit": true,
    "removeComments": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "benchmarks",
    "**/*.test.ts"
  ]
}
